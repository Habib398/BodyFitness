<div class="max-w-6xl mx-auto p-6 grid grid-cols-1 lg:grid-cols-2 gap-6 items-center">
<section style="width: 1900px; height: 500px;">

    <h1 class="text-4xl font-bold mb-8">REGISTRO DE <span class="text-red-500">CONTACTO</h1>
<form method="POST">
  <label>
    <h2 class="text-2xl font-semibold mb-4">Nombre :</h2>
    <input type="text" name="username" required class="text-black" />
  </label><br>
  <label>
    <h2 class="text-2xl font-semibold mb-4">Correo <span class="text-red-500">electrónico :</h2>
    <input type="email" name="email" required class="text-black"/>
  </label><br>
  <label>
    <h2 class="text-2xl font-semibold mb-4">Número <span class="text-red-500">telefonico :</h2>
    <input type="text" name="text" required class="text-black"/>
  </label><br><br>
  <button style="color: rgb(255, 255, 255); border: none; padding: 15px 32px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; border-radius: 12px; cursor: pointer; box-shadow: 0 4px 8px rgba(146, 146, 146, 0.2); transition: 0.3s;">
    Enviar
  </button>
  
</form>
</section>
</div>
