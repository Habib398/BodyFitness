---
import Card from "./card.astro";
import Cardpaquet from "./cardpaquet.astro";
---
<article class="relative bg-cover bg-center p-8" style="background-image: url('/assets/fondoService.png');">
    <!-- Capa oscura -->
    <div class="absolute inset-0 bg-black bg-opacity-90"></div>
    <div class="relative">
        <div>
            <h2 class="text-5xl lg:text-7xl text-white text-center mb-8 font-bold">
                ELIGE LA MEMBRESÍA <span class="text-red-600">PERFECTA PARA TI</span>
            </h2>
        </div>

        <!-- Membresías Individuales -->
        <section class="mb-16 font-sans">
            <div class="border border-white rounded-full mx-auto text-center mb-8 w-2/3">
                <h3 class="text-white text-2xl lg:text-4xl font-semibold p-2 uppercase">
                    MEMBRESÍAS INDIVIDUALES
                </h3>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
                <Card
                    title="Inscripción"
                    price="$200"
                    description="Cuota única requerida para nuevos miembros, válida para activar cualquier membresía"
                />
                <Card
                    title="Normal"
                    price="$450"
                    description="Acceso completo y libre al gimnasio"
                />
                <Card
                    title="Estudiantes"
                    price="$400"
                    description="Para estudiantes con credencial vigente"
                />
                <Card
                    title="Cobro Automático"
                    price="$300"
                    description="Cargo directo a tu tarjeta para mayor comodidad"
                />
                <Card
                    title="Quincenal"
                    price="$250"
                    description="Acceso completo al gimnasio por dos semanas"
                />
            </div>
        </section>

        <!-- Paquetes Especiales -->
        <section>
            <div class="border border-white rounded-full mx-auto text-center mb-8 w-2/3">
                <h3 class="text-white text-2xl lg:text-4xl font-semibold p-2 uppercase">
                    PAQUETES ESPECIALES
                </h3>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <Cardpaquet
                    title="Inscripción de Grupo"
                    price="$150"
                    description="Inscripción con descuento para grupos que se inscriben juntos"
                />
                <Cardpaquet
                    title="Parejas"
                    price="$700"
                    description="Membresía mensual para dos personas, ideal para entrenar juntos"
                />
                <Cardpaquet
                    title="3 Personas"
                    price="$1050"
                    description="Membresía grupal mensual para tres personas con acceso completo"
                />
            </div>
        </section>
    </div>
</article>
