---
export interface Props {
  title: string;
  description: string;
  icon: string; 
}

const { title, description, icon } = Astro.props;
---

<div class="group border border-red-600 rounded-lg p-6 text-center text-white hover:bg-red-700 transition-all duration-300 font-sans">
  <img src={icon} alt={title} class="mx-auto w-16 h-16 mb-4" />
  <h3 class="text-xl font-bold text-red-600 group-hover:text-white transition-all duration-300">
    {title}
  </h3>
  <p class="text-base mt-2 leading-relaxed">
    {description}
  </p>
</div>
