---
export interface Props {
  title: string;
  description: string;
  icon: string; // Ruta del Ã­cono (puede ser un SVG o una URL)
}

const { title, description, icon } = Astro.props;
---

<div class="border border-red-600 rounded-lg p-6 text-center text-white hover:bg-red-700 hover:text-white transition">
  <img src={icon} alt={title} class="mx-auto w-12 h-12 mb-4" />
  <h3 class="text-lg font-bold text-red-600">{title}</h3>
  <p class="text-sm mt-2">{description}</p>
</div>
